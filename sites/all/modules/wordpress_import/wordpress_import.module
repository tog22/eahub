/**
 * Implementation of hook_help()
 */
function wordpress_import_help($path, $arg) {
  $output = '';

  switch ($path) {
    case "admin/help#wordpress_import":
    $output = '<p>'.  t("This module imports a WXR file generated by Wordpress blog software into Drupal") .'</p>';
    break;
  }

  return $output;
}


